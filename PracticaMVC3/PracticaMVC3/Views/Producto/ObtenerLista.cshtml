@model List<PracticaMVC3.Models.AccesoDatos.Producto>

<h1>Lista de Producto</h1>
<table id="tablaProducto" class="table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Codigo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr class="producto">
                <td class="nombre">@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Codigo</td>
                <td>@Html.ActionLink("Modificar", "Modificar", new { id = @producto.Id })</td>
                <td>@Html.ActionLink("Eliminar", "Eliminar", new { id = @producto.Id })</td>
            </tr>
        }
        @Html.ActionLink("Buscar", "Busqueda", "Producto")
    </tbody>
</table>
<input id="txt-prueba" type="text"  />
<input id="btn-buscar" type="button"  />
<div id="div-resultado"></div>
<script src="~/scripts/jquery-1.10.2.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/Listar-Producto.js"></script>
<script src="~/scripts/Venta.js"></script>