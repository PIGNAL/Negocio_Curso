

@model List<PracticaMVC3.Models.AccesoDatos.Persona>

<h1>Lista de Personas</h1>
<table class="table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Dni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persona in Model)
        {
            <tr>
                <td>@persona.Nombre</td>
                <td>@persona.Apellido</td>
                <td>@persona.Dni</td>
                <td>@Html.ActionLink("Modificar", "Modificar", new { id = @persona.Id })</td>
                <td>@Html.ActionLink("Eliminar", "Eliminar", new { id = @persona.Id })</td>
                <td></td>
            </tr>
        }
       // @Html.ActionLink("Buscar","Busqueda", "Persona")
        </tbody>
</table>
<input id="txt-prueba" type="text"value="prueba" />
<input id="btn-buscar"type="button"value="Buscar"/>
<div id="div-resultado">a</div>
<script src="~/scripts/jquery-1.10.2.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/Listar.js"></script>