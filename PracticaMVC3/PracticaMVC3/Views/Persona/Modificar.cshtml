
@model  PracticaMVC3.Models.AccesoDatos.Persona
@{
    ViewBag.Title = "Modificar";
}
<h1>Modificar</h1>

<form action="/Persona/GuardarModificacion">
    <br />
    <label>Nombre:</label>
    <input name="Nombre" value="@Model.Nombre" />
    <br />
    <label>Apellido:</label>
    <input name="Apellido" value="@Model.Apellido" />
    <br />
    <label>Dni:</label>
    <input name="Dni" value="@Model.Dni" />

    @Html.Hidden("Id", @Model.Id)
    <br />

    @if (ViewBag.Mensaje != null)
    {
        <h3>View.Bag.Mensaje</h3>
    }
    <input type="submit" value="Guardar" />

</form>
